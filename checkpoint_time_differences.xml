<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<settings>
	<!-- shows a connecting player a message, howTo use tracking -->
	<join_info>
		<enabled>true</enabled>
	</join_info>
	
	<!-- textcolor for time-differences -->
	<textcolors>
		<time_improved>3B3</time_improved>
		<time_equal>29F</time_equal>
		<time_worse>F00</time_worse>
	</textcolors>

	
	<widget_top>
		<enabled>true</enabled>
		<!-- starting position of widget_top -->
		<pos_x>-121</pos_x>
		<pos_y>80</pos_y>
		
		<!-- number of columns for a row -->
		<num_cols>9</num_cols>
		
		<!-- maximum of rows to show, if more than this number, don't show top-widget -->
		<max_rows>4</max_rows>
		
		<background_color>FFF</background_color>
		<!-- background-color for active and last active cp -->
		<background_color_active_last>556</background_color_active_last>
		
		<!-- color of cp-Number-text -->
		<cpNo_color>000000FF</cpNo_color>
		
		<!-- default color for diff-text when no comparison -->
		<cp_time_color>000000FF</cp_time_color>

		
		
		
		
		<!-- default color for cp-time (if shown) -->
		<additional_cp_time_color>000000FF</additional_cp_time_color>
		
		<!-- don't show finish as last cp -->
		<hide_finish>true</hide_finish>
		
		<!-- show cp-time in addition to cp-time-difference -->
		<show_cpTime>true</show_cpTime>
		
		
		<!-- adjustment of positions sizes -->		
		<quad_size_x>26</quad_size_x>
		<quad_size_y>5</quad_size_y>
		
		<text_size_cpNo>2</text_size_cpNo>
		<scale_cpNo>0.8</scale_cpNo>		
		<cp_label_pos_x>0.5</cp_label_pos_x>
		<cp_label_pos_y>0</cp_label_pos_y>
		<cp_label_size_x>5</cp_label_size_x>
		<cp_label_size_y>3.75</cp_label_size_y>
		
		<text_size_cp_time>2</text_size_cp_time>
		<scale_cp_time>0.8</scale_cp_time>
		<cp_time_label_pos_x>6</cp_time_label_pos_x>
		<cp_time_label_pos_y>0</cp_time_label_pos_y>		
		<cp_time_label_size_x>10</cp_time_label_size_x>
		<cp_time_label_size_y>3.75</cp_time_label_size_y>
		
		<text_size_cp_time_diff>2</text_size_cp_time_diff>
		<scale_cp_time_diff>0.5</scale_cp_time_diff>
		<cp_time_diff_label_pos_x>17</cp_time_diff_label_pos_x>
		<cp_time_diff_label_pos_y>0</cp_time_diff_label_pos_y>		
		<cp_time_diff_label_size_x>10</cp_time_diff_label_size_x>
		<cp_time_diff_label_size_y>3.75</cp_time_diff_label_size_y>
		
	</widget_top>

	
	<widget_middle>
		<enabled>true</enabled>
		<!-- position of widget_middle -->
		<pos_x>0</pos_x>
		<pos_y>0</pos_y>
	
		<background_color>55556699</background_color>
		
		<!-- default color for cp-time (when no comparison) -->
		<cp_time_color>DDDDEEFF</cp_time_color>
		
		<!-- how long widget middle should be shown -->
		<show_time>2000</show_time>
		
	</widget_middle>
	
	
	<widget_bottom>
		<enabled>true</enabled>
		
		<!-- position of widget_bottom -->
		<pos_x>-21.25</pos_x>
		<pos_y>-82.3125</pos_y>
	
		<background_color>55556699</background_color>
		
		<!-- default color for cp-time (when no comparison) -->
		<cp_time_color>DDDDEEFF</cp_time_color>
		
		<!-- example-text: own 1. dedi as pb record xx:xx.xxx -->
		<tracking_text_color>BBBBBBFF</tracking_text_color>
	</widget_bottom>
	
	<colorbar>
		<enabled>true</enabled>
	</colorbar>
</settings>
